generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "mysql"
  url      = env("DATABASE_URL")
}

model Solicitacao {
  id              String   @id @default(uuid())
  departamento    String
  email           String?
  protocolo       String?
  tipoSolicitacao String
  descricao       String
  veiculacao      Json
  dataEntrega     String
  horarioEntrega  String?
  observacoes     String?
  arquivoUrl      String?
  status          String   @default("todo")
  createdAt       DateTime @default(now())
  startedAt       DateTime?
  completedAt     DateTime?
  archivedAt      DateTime?
}
